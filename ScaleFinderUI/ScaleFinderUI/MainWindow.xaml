<Window x:Class="ScaleFinderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScaleFinderUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <StackPanel Orientation="Horizontal">
            <RadioButton Name="RBtnBaseC" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">C</RadioButton>
            <RadioButton Name="RBtnBaseD" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">D</RadioButton>
            <RadioButton Name="RBtnBaseE" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">E</RadioButton>
            <RadioButton Name="RBtnBaseF" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">F</RadioButton>
            <RadioButton Name="RBtnBaseG" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">G</RadioButton>
            <RadioButton Name="RBtnBaseA" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">A</RadioButton>
            <RadioButton Name="RBtnBaseB" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">B</RadioButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <RadioButton Name="RBtnAccidN" Checked="HandleAccidChecked" GroupName="Accid" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">♮</RadioButton>
            <RadioButton Name="RBtnAccidS" Checked="HandleAccidChecked" GroupName="Accid" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">#</RadioButton>
            <RadioButton Name="RBtnAccidF" Checked="HandleAccidChecked" GroupName="Accid" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">♭</RadioButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <RadioButton Name="RBtnTypeMajor" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="96" Height="48" Margin="5">Major</RadioButton>
            <RadioButton Name="RBtnTypeMinor" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="96" Height="48" Margin="5">Minor</RadioButton>
        </StackPanel>
        <TextBlock Name="TBSelectedScale" TextWrapping="Wrap" Text="응어절티비~~~&#xA;" Width="500" RenderTransformOrigin="1.907,1.105" FontSize="24"/>
        <TextBlock Name="TBScaleResult" TextWrapping="Wrap" Text="응어절비데~~~&#xA;" Width="500" RenderTransformOrigin="1.907,1.105" FontSize="24"/>
    </StackPanel>
</Window>
    

