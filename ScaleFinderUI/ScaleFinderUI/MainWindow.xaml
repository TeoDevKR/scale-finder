<Window x:Class="ScaleFinderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScaleFinderUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <StackPanel Orientation="Horizontal">
            <RadioButton Name="RBtnBaseC" Checked="HandleBasePitchChecked" GroupName="BassPitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">C</RadioButton>
            <RadioButton Name="RBtnBaseD" Checked="HandleBasePitchChecked" GroupName="BassPitch" Style="{StaticResource {x:Type ToggleButton}}" FontSize="30" Width="48" Height="48" Margin="5">D</RadioButton>
        </StackPanel>
        <TextBlock Name="TBSelectedScale" TextWrapping="Wrap" Text="응어절티비~~~&#xA;" Width="500" RenderTransformOrigin="1.907,1.105" FontSize="24"/>


    </StackPanel>
</Window>
    

