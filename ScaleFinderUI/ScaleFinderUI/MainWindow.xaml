<Window x:Class="ScaleFinderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ScaleFinderUI"
        mc:Ignorable="d"
        Title="Scale Finder" Height="1080" Width="1920">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
        <StackPanel x:Name="SPCanvas" Orientation="Horizontal" HorizontalAlignment="Center">
            <Canvas x:Name="CVMusicSheet" Width="1080" Height="240" Background="#f0f0f0" Margin="30"></Canvas>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Name="TBSelectedScale" TextWrapping="Wrap" Text="응어절티비~~~&#xA;" Width="1600" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="1.907,1.105" FontSize="32" TextAlignment="Center"/>
            <TextBlock Name="TBScaleResult" TextWrapping="Wrap" Text="응어절비데~~~&#xA;" Width="1600" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="1.907,1.105" FontSize="20" TextAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton Name="RBtnBaseC" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">C</RadioButton>
            <RadioButton Name="RBtnBaseD" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">D</RadioButton>
            <RadioButton Name="RBtnBaseE" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">E</RadioButton>
            <RadioButton Name="RBtnBaseF" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">F</RadioButton>
            <RadioButton Name="RBtnBaseG" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">G</RadioButton>
            <RadioButton Name="RBtnBaseA" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">A</RadioButton>
            <RadioButton Name="RBtnBaseB" Checked="HandleBasePitchChecked" GroupName="BasePitch" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">B</RadioButton>
            <TextBlock Name="TBSlash" TextWrapping="Wrap" Text="/" Width="64" Height="32" RenderTransformOrigin="1.907,1.105" FontSize="24" TextAlignment="Center" VerticalAlignment="Center"/>
            <RadioButton Name="RBtnAccidNatural" Checked="HandleAccidChecked" GroupName="Accid" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">♮</RadioButton>
            <RadioButton Name="RBtnAccidSharp" Checked="HandleAccidChecked" GroupName="Accid" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">#</RadioButton>
            <RadioButton Name="RBtnAccidFlat" Checked="HandleAccidChecked" GroupName="Accid" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="24" Width="40" Height="40" Margin="3">♭</RadioButton>
            <Button Name="ButtonDown" Click="HandleAccidCountDown" FontSize="18" Width="72" Height="48" Margin="3"  Background="Transparent" BorderBrush="Transparent">
                <materialDesign:PackIcon Kind="ArrowLeftBoldCircleOutline" Width="44" Height="44" Foreground="Gray"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <TextBox Name="TBAccidCount" PreviewTextInput="NumberValidationTextBoxAccidCount" LostFocus="OnLostFocusAccidCount" TextChanged="HandleTextChanged" TextAlignment="Center" FontSize="24" Width="40" Height="40" Margin="5">1</TextBox>
            <Button Name="ButtonUp" Click="HandleAccidCountUp" FontSize="18" Width="72" Height="48" Margin="3" Background="Transparent" BorderBrush="Transparent">
                <materialDesign:PackIcon Kind="ArrowRightBoldCircleOutline" Width="44" Height="44" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
        <StackPanel>
            <TextBlock Name="TBBlank" TextWrapping="Wrap" Text=" " Width="64" Height="32" RenderTransformOrigin="1.907,1.105" FontSize="24" TextAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton Name="RBtnTypeMajorScale" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="72" Height="44" Margin="3">Major</RadioButton>
            <RadioButton Name="RBtnTypeMinorScale" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="72" Height="44" Margin="3">Minor</RadioButton>
            <RadioButton Name="RBtnTypeHarmonicMinorScale" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="187" Height="44" Margin="3">Harmonic Minor</RadioButton>
            <RadioButton Name="RBtnTypeMelodicMinorScale" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="174" Height="44" Margin="3" Padding="50">Melodic Minor</RadioButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton Name="RBtnTypeIonianMode" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="86" Height="44" Margin="3">Ionian</RadioButton>
            <RadioButton Name="RBtnTypeDorianMode" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="85" Height="44" Margin="3">Dorian</RadioButton>
            <RadioButton Name="RBtnTypePhtygianMode" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="111" Height="44" Margin="3">Phtygian</RadioButton>
            <RadioButton Name="RBtnTypeLydianMode" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="96" Height="44" Margin="3">Lydian</RadioButton>
            <RadioButton Name="RBtnTypeMixolydianMode" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="138" Height="44" Margin="3">Mixolydian</RadioButton>
            <RadioButton Name="RBtnTypeAeolianMode" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="108" Height="44" Margin="3">Aeolian</RadioButton>
            <RadioButton Name="RBtnTypeLocrainMode" Checked="HandleTypeChecked" GroupName="Type" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButtonDefault}" FontSize="20" Width="103" Height="44" Margin="3">Locrain</RadioButton>
            <TextBlock Name="TBBlank2" TextWrapping="Wrap" Text=" " Width="64" Height="32" RenderTransformOrigin="1.907,1.105" FontSize="24" TextAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Margin="20" Height="120" Width="480" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="TBDegrees" TextWrapping="Wrap" Text="응어절변기~~~&#xA;" Width="1600" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="1.907,1.105" FontSize="20" TextAlignment="Center" Foreground="#FF8A8A8A"/>
            <TextBlock Name="TBIntervalsResult" TextWrapping="Wrap" Text="응어절곰팡이~~~&#xA;" Width="1600" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="1.907,1.105" FontSize="20" TextAlignment="Center" Foreground="#FF8A8A8A"/>
            <TextBlock Name="TBIntegerNotation" TextWrapping="Wrap" Text="응어절하수구~~~&#xA;" Width="1600" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="1.907,1.105" FontSize="20" TextAlignment="Center" Foreground="#FF8A8A8A"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <RadioButton Name="RBtnSortAscending" Checked="HandleSortChecked" IsChecked="true" GroupName="Sort" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="144" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Ascending</RadioButton>
                <RadioButton Name="RBtnSortDescending" Checked="HandleSortChecked" GroupName="Sort" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="144" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Descending</RadioButton>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TabControl SelectionChanged="HandleClefTypeSelectionChanged">
                    <TabItem Name="TIGClef" Width="400" Height="92">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="assets\GClef.png" VerticalAlignment="Center" HorizontalAlignment="Center" Height="70"/>
                                <TextBlock Name="TBGClef" TextWrapping="Wrap" Text="G Clef" Width="84" Height="32" RenderTransformOrigin="1.907,1.105" FontSize="18" TextAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Name="RBtnTrebleClef" Checked="HandleClefChecked" GroupName="GClef" IsChecked="True" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="144" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Treble Clef</RadioButton>
                                <RadioButton Name="RBtnFrenchClef" Checked="HandleClefChecked" GroupName="GClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="144" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">French Clef</RadioButton>
                            </StackPanel>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem Name="TIFClef" Width="400" Height="92">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="assets\FClef.png" VerticalAlignment="Center" HorizontalAlignment="Center" Height="60"/>
                                <TextBlock Name="TBFClef" TextWrapping="Wrap" Text="F Clef" Width="84" Height="32" RenderTransformOrigin="1.907,1.105" FontSize="18" TextAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Name="RBtnBassClef" Checked="HandleClefChecked" GroupName="FClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="152" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Bass Clef</RadioButton>
                                <RadioButton Name="RBtnBaritoneFClef" Checked="HandleClefChecked" GroupName="FClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="264" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Baritone Clef (F Clef)</RadioButton>
                                <RadioButton Name="RBtnSubbassClef" Checked="HandleClefChecked" GroupName="FClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="188" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Subbass Clef</RadioButton>
                            </StackPanel>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem Name="TICClef" Width="400" Height="92">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="assets\CClef.png" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50"/>
                                <TextBlock Name="TBCClef" TextWrapping="Wrap" Text="C Clef" Width="84" Height="32" RenderTransformOrigin="1.907,1.105" FontSize="18" TextAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Name="RBtnAltoClef" Checked="HandleClefChecked" GroupName="CClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="144" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Alto Clef</RadioButton>
                                <RadioButton Name="RBtnTenorClef" Checked="HandleClefChecked" GroupName="CClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="156" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Tenor Clef</RadioButton>
                                <RadioButton Name="RBtnBaritoneCClef" Checked="HandleClefChecked" GroupName="CClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="288" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Baritone Clef (C Clef)</RadioButton>
                                <RadioButton Name="RBtnMezzoSopranoClef" Checked="HandleClefChecked" GroupName="CClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="264" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Mezzo-soprano Clef</RadioButton>
                                <RadioButton Name="RBtnSopranoClef" Checked="HandleClefChecked" GroupName="CClef" Style="{StaticResource MaterialDesignCalendarMeridiemRadioButton}" FontSize="22" Width="188" Height="48" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Soprano Clef</RadioButton>
                            </StackPanel>
                        </TabItem.Content>
                    </TabItem>
                </TabControl>
            </StackPanel>
            <Button Name="BtnPlaySound" Click="HandleBtnPlaySound" FontSize="30" Width="200" Height="48" Margin="5">PLAY</Button>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TBSpeedText" TextAlignment="Center" TextWrapping="Wrap" Text="Note Speed: " Width="180" RenderTransformOrigin="1.907,1.105" FontSize="30" Height="44"/>
                <TextBox x:Name="TBSoundSpeed" TextAlignment="Center" FontSize="30" Width="96" Height="48" Text="200"/>
                <TextBlock x:Name="TBmsText" TextAlignment="Center" TextWrapping="Wrap" Text="ms" Width="48" RenderTransformOrigin="1.907,1.105" FontSize="30" Height="44"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
    

